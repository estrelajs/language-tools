{
  "name": "estrela-vscode",
  "displayName": "Estrela for VSCode",
  "description": "Estrela Syntax for VSCode",
  "publisher": "estrelajs",
  "author": "Eduardo Rosostolato",
  "icon": "assets/logo.png",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/extension.js",
  "galleryBanner": {
    "color": "#009DFF",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "estrela",
    "vscode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/estrelajs/language-tools.git"
  },
  "bugs": {
    "url": "https://github.com/estrelajs/language-tools/issues"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "scripts": {
    "compile": "tsc -b",
    "watch:compile": "tsc -b -w"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-estrela-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.jsx",
          "source.ts",
          "source.tsx"
        ],
        "scopeName": "styled.estrela",
        "path": "./syntaxes/estrela.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/vscode": "^1.67.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "typescript-estrela-plugin": "^0.2.0",
    "vscode-languageclient": "^8.0.1",
    "vscode-languageserver": "^8.0.1"
  }
}